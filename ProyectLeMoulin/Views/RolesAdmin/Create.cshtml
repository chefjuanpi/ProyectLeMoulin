@model IdentitySample.Models.RoleViewModel

@{
    ViewBag.Title = "Create nouvelle role";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="container">
        <div class="col-md-4">
            <div class="row">
                <a href='@Url.Action("Index", "RolesAdmin")' class="btn btn-danger col-md-3">
                    <i class="fa fa-arrow-circle-left"></i> Liste
                </a>
            </div>
            <br/>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal alert alert-info">
                    <h4>Fiche de role</h4>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-4">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
