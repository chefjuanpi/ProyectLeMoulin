@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{
    ViewBag.Title = "Liste des membres";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <a href='@Url.Action("Create", "UsersAdmin")' class="btn btn-success col-md-2">
        <i class="fa fa-plus-square"></i> Nouvelle membre
    </a>
</div>
<br />

<table class="table alert alert-warning">
    <tr>
        <th>
            Prenom et Nom
        </th>
        <th>
            Courriel
        </th>
        <th>
            Téléphone
        </th>
        <th>
            status
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom) &nbsp;
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @{ if (item.Suspendre)
                 {
                    <p class="text-danger"><strong>Suspendu</strong></p>
                 }
                 else
                 {
                       <p class="text-success"><strong>Active</strong></p>
                 }
                }
            </td>



            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Effacer", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
