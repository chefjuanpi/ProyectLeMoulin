<!DOCTYPE html>
<html lang="fr-ca">
<head>
    <!--[if gte IE 9]>
      <style type="text/css">
        .gradient {
           filter: none;
        }
      </style>
    <![endif]-->

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewBag.Message" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/handlebars")
    @RenderSection("scripts", required: false)

    <style type="text/css">
        body{
            padding-top: 65px; 
            background: #f8ffe8; /* Old browsers */
            /* IE9 SVG, needs conditional override of 'filter' to 'none' */
            background: url(data:image/svg+xml;base64,);
            background: -moz-radial-gradient(center, ellipse cover, #f8ffe8 0%, #e3f5ab 43%, #b7df2d 100%); /* FF3.6+ */
            background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#f8ffe8), color-stop(43%,#e3f5ab), color-stop(100%,#b7df2d)); /* Chrome,Safari4+ */
            background: -webkit-radial-gradient(center, ellipse cover, #f8ffe8 0%,#e3f5ab 43%,#b7df2d 100%); /* Chrome10+,Safari5.1+ */
            background: -o-radial-gradient(center, ellipse cover, #f8ffe8 0%,#e3f5ab 43%,#b7df2d 100%); /* Opera 12+ */
            background: -ms-radial-gradient(center, ellipse cover, #f8ffe8 0%,#e3f5ab 43%,#b7df2d 100%); /* IE10+ */
            background: radial-gradient(ellipse at center, #f8ffe8 0%,#e3f5ab 43%,#b7df2d 100%); /* W3C */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f8ffe8', endColorstr='#b7df2d',GradientType=1 ); /* IE6-8 fallback on horizontal gradient */
        }

        .navbar-default {
	        background-color: #b7dd33;
	        border-color: #cfcb83;
        }
                navbar-default .navbar-brand {
	        color: #f8fafa;
        }
        .navbar-default .navbar-brand:hover, .navbar-default .navbar-brand:focus {
	        color: #dd75b0;
        }
        .navbar-default .navbar-text {
	        color: #f8fafa;
        }
        .navbar-default .navbar-nav > li > a {
	        color: #f8fafa;
        }
        .navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
	        color: #dd75b0;
        }
        .navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
	        color: #dd75b0;
	        background-color: #cfcb83;
        }
        .navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus {
	        color: #dd75b0;
	        background-color: #cfcb83;
        }
        .navbar-default .navbar-toggle {
	        border-color: #cfcb83;
        }
        .navbar-default .navbar-toggle:hover, .navbar-default .navbar-toggle:focus {
	        background-color: #cfcb83;
        }
        .navbar-default .navbar-toggle .icon-bar {
	        background-color: #f8fafa;
        }
        .navbar-default .navbar-collapse,
        .navbar-default .navbar-form {
	        border-color: #f8fafa;
        }
        .navbar-default .navbar-link {
	        color: #f8fafa;
        }
        .navbar-default .navbar-link:hover {
	        color: #dd75b0;
        }

        @@media (max-width: 767px) {
	        .navbar-default .navbar-nav .open .dropdown-menu > li > a {
		        color: #f8fafa;
	        }
	        .navbar-default .navbar-nav .open .dropdown-menu > li > a:hover, .navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
		        color: #dd75b0;
	        }
	        .navbar-default .navbar-nav .open .dropdown-menu > .active > a, .navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover, .navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
		        color: #dd75b0;
		        background-color: #cfcb83;
	        }
        }

        .white-bg{
            background:#ffffff;
        }

    </style>
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });

            $(".dropdown-submenu").click(function () {
                $(this).addClass("open");
                $("#menuOutres").attr("tabindex", -1).focus();
            });

            $("#menuOutres").focusout(function () {
                console.log("hallo");
                $(".dropdown-submenu").removeClass("open");
                $("#menuOutres").removeAttr("tabindex");
            });
        });
    </script>
</head>
<body style="filter:progid:DXImageTransform.Microsoft.Gradient(endColorstr='#cc0000', startColorstr='#FFFFFF', gradientType='0');">
    <!-- Google Tag Manager -->
    <noscript>
        <iframe src="//www.googletagmanager.com/ns.html?id=GTM-5G9V7N"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
            j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
            '//www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-5G9V7N');</script>
    <!-- End Google Tag Manager -->
    <nav class="navbar navbar-default navbar-fixed-top row" role="navigation">
        <div class="container-fluid">
            <a href="/Home/Index"> <img class="col-md-2 img-responsive" src="../Images/logo.png" alt="Le Moulin d'à côté'" /></a>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="container" role="navigation">
                <div class="navbar-collapse collapse" id="side-menu">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                        @Html.Action("Menu", "Layout")
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <br />
    </div>
    <br />

    <div class="container-fluid">
        <hr />
        <div class="panel-footer">
            <footer>
                <p>Le Moulin d'À Côté &copy; @DateTime.Now.Year - Crée par Pablo Aguilar-Lliguin, Steeve Bouchard et Michel Goyette</p>
            </footer>
        </div>
    </div>
</body>
</html>
