<!DOCTYPE html>
<html lang="fr-ca">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewBag.Message" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <style type="text/css">
         /*sections desc orders pour faire sticky footer, le footer on bas de l'écran tôut le temp*/
        html, body {
	        height: 100%;
        }
        .wrapper {
	        min-height: 100%;
	        margin: 0 auto -50px; /* the bottom margin is the negative value of the footer's height */
        }
        footer, .push {
	        height: 50px; /* '.push' must be the same height as 'footer' */
        }
        /*final sticky footer*/

    </style>

    <!--[if gte IE 9]>
      <style type="text/css">
        .gradient {
           filter: none;
        }
      </style>
    <![endif]-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/handlebars")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        document.createElement('header');
        document.createElement('footer');
        document.createElement('section');
        document.createElement('article');
        document.createElement('aside');
        document.createElement('nav');

        $(function () {
            $.ajaxSetup({ cache: false });

            $(".dropdown-submenu").click(function () {
                $(this).addClass("open");
                $("#menuOutres").attr("tabindex", -1).focus();
            });

            $("#menuOutres").focusout(function () {
                $(".dropdown-submenu").removeClass("open");
                $("#menuOutres").removeAttr("tabindex");
            });
        });
    </script>
</head>
<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/fr_CA/sdk.js#xfbml=1&appId=438081452993871&version=v2.0";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <!-- Google Tag Manager -->
    <noscript>
        <iframe src="//www.googletagmanager.com/ns.html?id=GTM-5G9V7N"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
            j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
            '//www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-5G9V7N');</script>
    <!-- End Google Tag Manager -->
    <div class="wrapper">
        <nav class="navbar nav-justified navbar-default" role="navigation">
            <a href="/"> <img class="col-md-2 col-xs-6 img-responsive" src="../Images/logo.png" alt="Le Moulin d'à côté'" /></a>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="side-menu" role="navigation">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    @Html.Action("Menu", "Layout")
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container alert white-t4">
            @RenderBody()
        </div>
        <div class="push"></div>
    </div>
    <footer class="panel-footer footer">
            <p>Le Moulin d'À Côté &copy; @DateTime.Now.Year - Crée par Pablo Aguilar-Lliguin, Steeve Bouchard et Michel Goyette</p>
    </footer>
</body>
</html>
