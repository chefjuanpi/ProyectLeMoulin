            background: -webkit-linear-gradient(left, rgba(180,247,118,0) 0%,rgba(180,247,118,0.8) 12%,rgba(180,247,118,0.92) 20%,rgba(191,230,106,1) 25%,rgba(244,145,46,1) 50%,rgba(187,236,110,1) 75%,rgba(180,247,118,0.95) 78%,rgba(180,247,118,0.8) 88%,rgba(180,247,118,0) 100%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(left, rgba(180,247,118,0) 0%,rgba(180,247,118,0.8) 12%,rgba(180,247,118,0.92) 20%,rgba(191,230,106,1) 25%,rgba(244,145,46,1) 50%,rgba(187,236,110,1) 75%,rgba(180,247,118,0.95) 78%,rgba(180,247,118,0.8) 88%,rgba(180,247,118,0) 100%); /* Opera 11.10+ */
            background: -ms-linear-gradient(left, rgba(180,247,118,0) 0%,rgba(180,247,118,0.8) 12%,rgba(180,247,118,0.92) 20%,rgba(191,230,106,1) 25%,rgba(244,145,46,1) 50%,rgba(187,236,110,1) 75%,rgba(180,247,118,0.95) 78%,rgba(180,247,118,0.8) 88%,rgba(180,247,118,0) 100%); /* IE10+ */
            background: linear-gradient(to right, rgba(180,247,118,0) 0%,rgba(180,247,118,0.8) 12%,rgba(180,247,118,0.92) 20%,rgba(191,230,106,1) 25%,rgba(244,145,46,1) 50%,rgba(187,236,110,1) 75%,rgba(180,247,118,0.95) 78%,rgba(180,247,118,0.8) 88%,rgba(180,247,118,0) 100%); /* W3C */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00b4f776', endColorstr='#00b4f776',GradientType=1 ); /* IE6-9 */
        }
        .wrapper {
	        min-height: 100%;
	        margin: 0 auto -50px; /* the bottom margin is the negative value of the footer's height */
        }
        footer, .push {
	        height: 50px; /* '.push' must be the same height as 'footer' */
        }
        /*final sticky footer*/

        .orange-t5
        {
            background-image: linear-gradient(to bottom, #fFd2a8 ,rgba(248, 248, 248, 0.5) 100%);
            background-color: rgba(248, 248, 248, 0.5);
        }
        .buttonBox {
            position: absolute;
            bottom:0;
            right:0;
        }
    </style>

    <!--[if gte IE 9]>
      <style type="text/css">
        .gradient {
           filter: none;
        }
      </style>
    <![endif]-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/handlebars")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });

            $(".dropdown-submenu").click(function () {
                $(this).addClass("open");
                $("#menuOutres").attr("tabindex", -1).focus();
            });

            $("#menuOutres").focusout(function () {
                $(".dropdown-submenu").removeClass("open");
                $("#menuOutres").removeAttr("tabindex");
            });
        });
    </script>
