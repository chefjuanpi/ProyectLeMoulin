    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <style type="text/css">
         /*sections desc orders pour faire sticky footer, le footer on bas de l'écran tôut le temp*/
        html, body {
	        height: 100%;
            background: -moz-linear-gradient(left, rgba(180,247,118,0) 0%, rgba(180,247,118,0.8) 12%, rgba(180,247,118,0.92) 20%, rgba(191,230,106,1) 25%, rgba(244,145,46,1) 50%, rgba(187,236,110,1) 75%, rgba(180,247,118,0.95) 78%, rgba(180,247,118,0.8) 88%, rgba(180,247,118,0) 100%); /* FF3.6+ */
